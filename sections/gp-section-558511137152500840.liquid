      <script id="custom-js-g0YP7qEvSv">
        try {
          document.addEventListener("DOMContentLoaded", function() {
    let desktopButton = document.querySelector(".sticky-button-desktop");
    let mobileButton = document.querySelector(".sticky-button-mobile");
    let scrollThreshold = 8000; // Höhe in Pixeln, ab der der Button erscheinen soll

    function toggleButtonVisibility() {
        if (window.scrollY > scrollThreshold) {
            if (desktopButton) desktopButton.classList.add("visible");
            if (mobileButton) mobileButton.classList.add("visible");
        } else {
            if (desktopButton) desktopButton.classList.remove("visible");
            if (mobileButton) mobileButton.classList.remove("visible");
        }
    }

    window.addEventListener("scroll", toggleButtonVisibility);
});

        } catch(err){}
