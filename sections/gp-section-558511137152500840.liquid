    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* Stellt sicher, dass der Text vertikal zentriert ist */
.sticky-button-desktop span {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    line-height: normal; /* Verhindert komisches Spacing */
