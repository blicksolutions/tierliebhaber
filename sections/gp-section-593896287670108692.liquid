<script>
document.addEventListener("DOMContentLoaded",()=>{

  const cards=document.querySelectorAll(".tl-offer-card");
  const gifts=document.querySelector(".tl-freegifts");

  function setGifts(bundle){
    if(bundle){
      gifts.classList.add("tl-freegifts--active");
      gifts.classList.remove("tl-freegifts--inactive");

      // Smooth scroll on activation
      gifts.scrollIntoView({behavior:"smooth",block:"center"});
    }else{
      gifts.classList.remove("tl-freegifts--active");
      gifts.classList.add("tl-freegifts--inactive");
    }
  }

  setGifts(true);

  cards.forEach(card=>{
    card.addEventListener("click",e=>{

      if(e.target.tagName.toLowerCase()==="a") return;

      cards.forEach(c=>c.classList.remove("is-active"));
      card.classList.add("is-active");

      const isBundle = card.dataset.offer==="bundle";
      setGifts(isBundle);

      if(isBundle){
        // Bounce animation
        gifts.style.transform="scale(0.97)";
        setTimeout(()=>gifts.style.transform="scale(1)",120);
      }
    });
  });
});
</script>
