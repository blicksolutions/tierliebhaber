          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Newsletter"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Text",
          "default": "<p>A short sentence describing what someone will receive by subscribing</p>"
        }
      ]
    },
    {
      "type": "socials",
      "name": "Socials",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Section title",
          "default": "Folge uns"
        },
        {
          "type": "metaobject_list",
          "id": "socials",
          "label": "Socials",
          "metaobject_type": "social"
        }
      ]
    },
    {
      "type": "awards",
      "name": "Awards",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Section title",
          "default": "Mehrfach ausgezeichnet"
        },
        {
          "type": "metaobject_list",
          "id": "awards",
          "label": "Awards",
          "metaobject_type": "award"
        }
      ]
    },
    {
      "type": "shipping",
      "name": "Shipping",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Section title",
          "default": "Nachhaltiger Versand"
        }
      ]
    },
    {
      "type": "reachability",
      "name": "Reachability",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Section title",
          "default": "So erreichst du uns"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "text",
        "settings": {}
      },
      {
        "type": "links",
        "settings": {
          "menu": "footer"
        }
      },
      {
        "type": "newsletter",
        "settings": {}
      }
    ]
  }
}
