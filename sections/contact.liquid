<section class="Section -Secondary Section--spacingNormal">
  <div class="Container">
    <header class="SectionHeader SectionHeader--center">
      <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title }}</h2>
      <div class="SectionHeader__SubHeading">{{ section.settings.subtitle }}</div>
    </header>
    <div class="SectionContent">
      <div class="Contact">
        <div
          class="Contact__ImageContainer Image"
          style="--aspect-ratio: {{ section.settings.image.aspect_ratio }}; --min-width: {{ section.settings.image_min_width }}px;"
        >
          <img
            class="Image__Image Image--lazyLoad Image--fadeIn"
            src="{{ section.settings.image | img_url: 'master' }}"
            alt="{{ section.settings.image_alt | escape }}"
            loading="lazy"
          >
        </div>
        <div class="Contact__Content">
          <p class="Contact__CtaTitle Heading u-h3">{{ section.settings.cta_title }}</p>
          <div class="Contact__Buttons">
            {%- for block in section.blocks -%}
              <a
                class="Button"
                href="{{ block.settings.url }}"
                style="--color: {{ block.settings.color }};"
              >
                <img
                  class="Button__Image Image--lazyLoad Image--fadeIn"
                  src="{{ block.settings.image | img_url: 'master' }}"
                  alt="{{ block.settings.image_alt | escape }}"
                  loading="lazy"
                >
                <span class="Button__Text">{{ block.settings.text }}</span>
              </a>
            {%- endfor -%}
          </div>
          <div class="Contact__MicroCopy" style="max-width: 80%; margin: 0 auto;">
            {{ section.settings['microcopy-html'] }}
          </div>
        </div>
      </div>
      <div class="panel" id="panel">
        {{ section.settings.datenschutz }}
      </div>
    </div>
  </div>
</section>

