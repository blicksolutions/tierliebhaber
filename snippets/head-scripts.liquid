<!-- Trustpilot Widget - GDPR Compliant -->
<script type="text/plain" data-cookieconsent="marketing">
  // Load Trustpilot only after marketing consent
  const trustpilotScript = document.createElement('script');
  trustpilotScript.src = '//widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js';
  trustpilotScript.defer = true;
  document.head.appendChild(trustpilotScript);
</script>

{%- capture layout_bundle -%}bundle.layout.{{- layout -}}.js{%- endcapture -%}
<script src="{{ layout_bundle | asset_url }}" defer></script>

{%- if template -%}
  {%- capture template_bundle -%}bundle.template.{{- template.name | remove: 'customers/' -}}.js{%- endcapture -%}
  <script src="{{ template_bundle | asset_url }}" defer></script>
{%- endif -%}