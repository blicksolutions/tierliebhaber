          });
        }
        setFalse();
      })();

      function syncCookiebotToShopify(){
        if(!window.Shopify || !Shopify.loadFeatures || !window.Cookiebot) return;
        Shopify.loadFeatures([{ name: 'consent-tracking-api', version: '0.1' }], function(err){
          if(err || !Shopify.customerPrivacy) return;
          try {
            Shopify.customerPrivacy.setTrackingConsent({
              analytics:   !!Cookiebot.consent.statistics,
              marketing:   !!Cookiebot.consent.marketing,
              preferences: !!Cookiebot.consent.preferences
            }, function(){});
          } catch(e){}
        });
      }
      window.addEventListener('CookiebotOnConsentReady', syncCookiebotToShopify);
      window.addEventListener('CookiebotOnAccept', syncCookiebotToShopify);
      window.addEventListener('CookiebotOnDecline', syncCookiebotToShopify);
