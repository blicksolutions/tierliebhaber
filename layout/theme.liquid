    <!-- Must be before the Cookiebot tag -->
<script>
(function () {
  const rx = /(?:^|\/)(?:static\.)?rechargecdn\.com|rechargepayments\.com|storefront\.getrecharge\.com/i;
  const mark = s => {
    if (s && s.tagName === 'SCRIPT' && rx.test(s.src)) {
      s.setAttribute('data-cookieconsent','ignore');
    }
  };
  // mark any existing script tags
  document.querySelectorAll('script[src]').forEach(mark);
  // mark future ones
  new MutationObserver(muts => muts.forEach(m => m.addedNodes.forEach(n => {
    if (n.nodeType === 1) {
      if (n.tagName === 'SCRIPT') mark(n);
      // if Recharge ever injects iframes, you could also add: n.tagName==='IFRAME' etc.
    }
  }))).observe(document.documentElement,{childList:true,subtree:true});
})();
</script>

